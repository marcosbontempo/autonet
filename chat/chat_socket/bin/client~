#!/usr/bin/env python

import socket
import sys
import os

TCP_IP = sys.argv[1]
TCP_PORT = 10000
BUFFER_SIZE = 1024

MESSAGE=""
for i in range (2,len(sys.argv)):
	MESSAGE += sys.argv[i]+"      "

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect((TCP_IP, TCP_PORT))
s.send(MESSAGE)
os.system("echo "+"tx-"+"$(date +%H:%M)"+MESSAGE+" >> messages")
s.close()
 
